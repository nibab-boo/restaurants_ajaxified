<div class="container pt-5">
  <h1><%= @restaurant.name %> <small><%= @restaurant.address %></small></h1>

  <div data-controller= "insert-in-list">
    <%=render 'review_counter', counter: @restaurant.reviews.size %>
    <%= render 'first_comment', restaurant: @restaurant %>
    <div id="reviews" data-insert-in-list-target="items">
      <% @restaurant.reviews.each do |review| %>
        <%= render 'review', review: review %>
      <% end %>
    </div>
    <%= render 'reviews/form', restaurant: @restaurant, review: @review %>
  </div>
</div>